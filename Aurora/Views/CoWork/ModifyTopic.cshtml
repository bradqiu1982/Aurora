                            function pump2towhoinput(choosed)
                            {
                                $('#towhoinput1').val( $('#towhoinput1').val() + '@@' + choosed + ' ');
                                $('#choosepeople').val('');
                            }

                            function pump2towhoinput2()
                            {
                                $('#towhoinput1').val( $('#towhoinput1').val() + '@@' + $('#choosepeople').val() + ' ');
                                $('#choosepeople').val('');
                            }
                    </script>
                </div>
