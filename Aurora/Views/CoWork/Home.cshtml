    iconarray.Add("glyphicon-th-list");
    iconarray.Add("glyphicon-blackboard");
    var idx = 0;

    var isie = false;
    var ua = Request.UserAgent;
    if (ua.IndexOf("MSIE ") > 0 || ua.IndexOf("Trident/") > 0 || ua.IndexOf("Edge/") > 0)
    { isie = true; }
