<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - AURORA</title>

    @Styles.Render("~/Content/css")
    @if (Session["utheme"] == null || Convert.ToInt32(Session["utheme"]) == Aurora.Models.Theme.Dark)
    {
        <link href="~/Content/common.css" rel="stylesheet" />
    }
    else
    {
        <link href="~/Content/lcommon.css" rel="stylesheet" />
    }
    <link href="~/Content/simplebar.css" rel="stylesheet" />
    <link href="@Url.Content("~/Content/jquery-ui.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/bootstrapfileinput.css")" rel="stylesheet" type="text/css" />


    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/jquery-ui")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/Scripts/ajaxfileupload.js" type="text/javascript"></script>
    <script src="~/Scripts/jquery.base64.js" type="text/javascript"></script>
    <script src="~/Scripts/intro/intro.min.js" type="text/javascript"></script>  


</head>
<body>
    <header>
        <span class="col-xs-3 logo"></span>
        <div class="user-info">
            <span class="header-user">@ViewBag.username</span>
        </div>
    </header>

    @RenderBody()


    @*@Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)*@
</body>
</html>
