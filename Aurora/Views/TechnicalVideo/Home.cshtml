
@{
    ViewBag.Title = "Home";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Home</h2>

@using (Html.BeginForm("UploadVideo", "TechnicalVideo", FormMethod.Post, new { enctype = "multipart/form-data", id = "tvideoform", name = "tvideoform" }))
{
    <div data-toggle="tooltip" title="Add Attachment" style="text-align:center;height:60px;width:60px;border:1px solid #808080;border-radius:3px;margin-top:120px;">
        <span class="glyphicon glyphicon-paperclip btn-file" style="text-align:center;font-size:40px;">
            <input class="btn-available" type="file" name="file1" id="file1" runat="server" onchange="ShowFileNamex(this)" />
        </span>
</div>

    <div>
        <input type="submit" value="submit">
    </div>

}